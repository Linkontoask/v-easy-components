{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "target": "es2019",
    "sourceMap": false,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"],
      "@packages/*": ["packages/*"],
      "lib/*": ["lib"]
    }
  },
  "files": ["./types/index.d.ts"],
  "include": ["./packages/**/*", "./src/**/*", "./types/*"],
  "exclude": ["node_modules"]
}
