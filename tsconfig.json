{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "target": "es2019",
    "sourceMap": false,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "paths": {
      "root/*": ["/*"],
      "@/*": ["src/*"],
      "@packages/*": ["packages/*"]
    },
    "typeRoots": ["./types"]
  },
  "exclude": ["node_modules"]
}
