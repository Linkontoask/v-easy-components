{
  "name": "v-easy-components",
  "description": "Vue.js UI Components",
  "version": "0.8.1",
  "main": "index.js",
  "files": [
    "lib",
    "src",
    "types",
    "packages"
  ],
  "keywords": [
    "Vue",
    "UI",
    "tools",
    "Components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Linkontoask/v-easy-components.git"
  },
  "scripts": {
    "bootstrap": "yarn || npm i",
    "dev": "webpack-dev-server --config config/webpack-dev-config.js",
    "build": "npm run clean && npm run build:main && npm run build:cm && npm run build:common && npm run build:theme",
    "build:main": "webpack --config config/webpack-build-config.js",
    "build:cm": "webpack --config config/webpack-build-components.js",
    "build:common": "webpack --config config/webpack-build-common.js",
    "build:theme": "rimraf src/theme-chalk/lib && gulp build --gulpfile src/theme-chalk/gulpfile.js && rimraf src/theme-chalk/lib/_font.css && cp-cli src/theme-chalk/lib lib/theme-chalk && rimraf lib/theme-chalk/lib",
    "test": "eslint",
    "clean": "rimraf lib",
    "test:commit": "validate-commit-msg",
    "change:log": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "prettier --write packages/**/*.vue packages/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:commit",
      "pre-push": "echo 'No specification'"
    }
  },
  "lint-staged": {
    "*.{js, vue}": [
      "prettier --write",
      "git add"
    ]
  },
  "homepage": "https://linkorg.club",
  "bugs": {
    "url": "https://github.com/Linkontoask/v-easy-components/issues"
  },
  "style": "lib/theme-chalk/index.css",
  "typings": "types/index.d.ts",
  "unpkg": "lib/index.min.js",
  "author": "Link",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "acorn": "^6.3.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "conventional-changelog-cli": "^2.0.25",
    "cp-cli": "^2.0.0",
    "cross-env": "^5.0.5",
    "css-loader": "^3.2.0",
    "eslint": "^6.7.2",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-vue": "^6.0.1",
    "file-loader": "^1.1.11",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "gulp": "^4.0.2",
    "gulp-cssmin": "^0.2.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^8.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^9.5.0",
    "path": "^0.12.7",
    "postcss": "^5.2.18",
    "postcss-loader": "^3.0.0",
    "postcss-salad": "^2.0.1",
    "prettier": "^1.19.1",
    "progress-bar-webpack-plugin": "^1.12.1",
    "rimraf": "^3.0.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "2.2.2",
    "ts-loader": "^6.0.3",
    "typescript": "^3.5.2",
    "url-loader": "^2.0.0",
    "validate-commit-msg": "^2.14.0",
    "vue": "^2.6.10",
    "vue-i18n": "^8.7.0",
    "vue-loader": "^15.7.0",
    "vue-router": "^3.1.3",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "core-js": "2",
    "deepmerge": "^3.1.0",
    "regenerator-runtime": "^0.13.3"
  },
  "peerDependencies": {
    "vue": "^2.6.10"
  }
}
